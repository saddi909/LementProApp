<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lementProApp" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.INTERACT_ACROSS_USERS_FULL" />

    <android:uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:name=".model.App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity android:name=".activity.SingleFragmentActivity" />
        <activity android:name=".activity.TaskFolders" />
        <activity android:name=".activity.DocumentFolders" />
        <activity android:name=".activity.ProjectFolders" />
        <activity
            android:name=".activity.TasksList"
            android:label="@string/title_activity_tasks_list" >
        </activity>
        <activity
            android:name=".activity.Login"
            android:label="@string/title_activity_login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.TaskDetails"
            android:label="@string/title_activity_task_details_new" >
        </activity>
        <activity
            android:name=".activity.ProjectsList"
            android:label="@string/title_activity_projects_list" >
        </activity>
        <activity
            android:name=".activity.DocumentsList"
            android:label="@string/title_activity_documents_list" >
        </activity>
        <activity
            android:name=".activity.DocumentDetails"
            android:label="@string/title_activity_document_details" >
        </activity>
        <activity
            android:name=".activity.ProjectDetails"
            android:label="@string/title_activity_project_details" >
        </activity>
    </application>

</manifest>
